<ul class="list-group list-group-flush">
    {{#each article}}
        <li class="list-group-item">
            <h4 id={{id}}>{{title}}</h4>
            <a href="{{link}}" target="_blank"><button type="button" class="btn btn-outline-dark" id="{{id}}"><i class="fab fa-readme"></i> Read Online</button></a> 
            <button type="button" class="btn btn-outline-dark note-button" id="{{id}}" data="{{_id}}" data-toggle="modal" data-target="#exampleModal" >add</button>
            <button title="Remove Article"type="button" class="btn btn-outline-dark unsave-button" data="{{id}}"><i class="far fa-trash-alt"></i></button>
        </li>
    
  <!-- modal for the notes -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <ul class="list-group list-group-flush">
            <!-- notes will appear below this comment -->
          </ul><hr>
          <form>
            <div class="form-group">
              <label for="message-text" class="col-form-label">Note:</label>
              <textarea class="form-control note-content" id="message-text"></textarea>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary save-note">Save Note</button>
        </div>
      </div>
    </div>
  </div>

{{/each}}
</ul>
